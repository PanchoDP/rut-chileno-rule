{
  "name": "panchodp/rut-chileno-rule",
  "description": "Validador(rule) y formateador de RUT chileno para Laravel.",
  "keywords": ["rut", "chile", "rule", "chilean", "laravel", "validation"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Francisco De Pablo",
      "email": "fcodepablo@gmail.com"
    }
  ],
  "require": {
    "php": "^8.4"
  },
  "require-dev": {
    "laravel/pint": "^1.27",
    "orchestra/testbench": "^10.9",
    "pestphp/pest": "^4.3.2",
    "phpstan/phpstan": "^2.1.37",
    "phpunit/phpunit": "^12.5.8"
  },
  "autoload": {
    "psr-4": {
      "Panchodp\\RutChileno\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Panchodp\\RutChileno\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Panchodp\\RutChileno\\RutServiceProvider"
      ],
      "aliases": {
        "Rut": "Panchodp\\RutChileno\\Facades\\Rut"
      }
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "pint": "vendor/bin/pint",
    "analyze": "vendor/bin/phpstan analyse src tests",
    "test:coverage": "vendor/bin/pest --coverage",
    "test:all": [
      "@test",
      "@pint",
      "@analyze"
    ]
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
